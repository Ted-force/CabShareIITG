              </li>
              
            </ul>
          </div>
        </div>
      </nav>

      <div id="InputForm">
        <form action="./add" method="POST" class="row g-3">
          <div class="row-md-4">
            <label for="validationDefault01" class="form-label">Name</label>
            <input type="text" class="form-control" id="validationDefault01" name="name" value="Piyush Rangari" required>
          </div>
          <div class="row-md-4">
            <label for="validationDefault02" class="form-label">Hostel</label>
            <input type="text" class="form-control" id="validationDefault02" name="hostel" value="Barak" required>
          </div>
          <div class="row-md-4">
            <label for="validationDefaultUsername" class="form-label">Travel date</label>
            <div class="input-group">
              <input type="date" class="form-control" id="validationDefaultDate"  name="date" aria-describedby="inputGroupPrepend2" onchange="DateCheck()" required>
            </div>
          </div>
          <div class="row-md-6">
            <label for="validationDefault03" class="form-label">Time</label>
            <input type="time" class="form-control" name="time" id="validationDefault03" required>
          </div>
          <div class="row-md-5">
            <label for="validationDefault06" class="form-label">Phone Number: +91-</label>
            <input type="tel" class="form-control" style="width: min-content;height: min-content;" name="phone" id="validationDefault06" pattern="[0-9]{10}" required>
          </div>

          <div id="parent"  class="form-check" >
            <label for="GroupSize" class="form-label">No. of people travelling</label>
            <select id="GroupSize" name="size" class="form-select" aria-label="Default select example" required>
              <option selected disabled value="">Select</option>
              <option value="1">Solo</option>
              <option value="2">Two</option>
              <option value="3">Three</option>
              <option value="4">Four</option>
            </select>
          </div>

        <div class="row-md-4">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault1" value="male" required>
            <label class="form-check-label" for="flexRadioDefault1">
              Male
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault2" value="female" required>
            <label class="form-check-label" for="flexRadioDefault2">
              Female
            </label>
          </div>
        </div>
          

          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" name="genderCheck" onclick="GenderCheck()">
            <label class="form-check-label" for="flexCheckDefault">
              Same gender preference
            </label>
          </div>

          <script>

            function fill(id1,id2) {
              var drop1 = document.getElementById(id1);
              var drop2 = document.getElementById(id2);
              drop2.innerHTML = '';
              if(drop1.value == "IITG") {
                var optionArray = ['Guw RailwayStation|Guwahati Railway Station','Airport|Airport'];
                
                for(option in optionArray) {
                  let pair = optionArray[option].split('|');
                  let newoption = document.createElement('option');
                  newoption.value = pair[0];
                  newoption.innerHTML = pair[1];
                  drop2.options.add(newoption)
                }

              } else {
                let newoption = document.createElement('option');
                newoption.value = "IITG";
                newoption.innerHTML = "IITG";
                drop2.options.add(newoption);
                 
              }
            }

            function DateCheck() {
              var today = new Date();
               var dd = String(today.getDate()).padStart(2, '0');
               var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
               var yyyy = today.getFullYear();

               today = yyyy + '-' + mm + '-' + dd ;
               
               if(document.getElementById('validationDefaultDate').value < today) {
                 alert("enter a valid date")
                 document.getElementById('validationDefaultDate').value = ''                 
               }              
            }

            function GenderCheck() {
              if(document.getElementById('flexCheckDefault').checked) {
                document.getElementById('flexCheckDefault').value = "SameGender"
                console.log(document.getElementById('flexCheckDefault').value)
              } else {
              document.getElementById('flexCheckDefault').value = ""
            }
            } 

                               

      

          </script>

          <div class="col-md-3">
            <label for="validationDefault04" class="form-label">From</label>
            <select name="from" class="form-select" id="validationDefault04" onchange="fill('validationDefault04','validationDefault05')" required>
              <option selected disabled value="">Choose...</option>
              <option value="Guw RailwayStation">Guwahati Railway Station</option>
              <option value="Airport">Airport</option>
              <option value="IITG">IITG</option>
            </select>
            <label for="validationDefault05" class="form-label">To</label>
            <select name="to" class="form-select" id="validationDefault05" required>
              
            </select>
            <br>
            
          
          
          <div class="col-12">
            <button class="btn btn-primary" type="submit">Submit form</button>
          </div>
        </form>

      </div>

